<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.repair.WheelRepairFragment">

    <TextView
        android:id="@+id/numberOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="42sp"
        android:textColor="@color/blue"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textOne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Остановите автомобиль на ровном участке. Если вы остановились не в гараже или не на внутридомовой дороге, то необходимо включить аварийный световой сигнал."
        android:textSize="20sp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toEndOf="@id/numberOne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/numberOne" />

    <TextView
        android:id="@+id/numberTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="42sp"
        android:textColor="@color/blue"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textOne" />

    <TextView
        android:id="@+id/textTwo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Расположите перед передним и задним колесами автомобиля деревянные бруски или камни для того, чтобы предотвратить скатывание автомобиля. Поставьте автомобиль на ручной тормоз. Включите “P” на автоматической коробке передач или первую передачу на ручной коробке передач при заглушенном двигателе."
        android:textSize="20sp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toEndOf="@id/numberTwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/numberTwo" />

    <TextView
        android:id="@+id/numberThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="42sp"
        android:textColor="@color/blue"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTwo" />

    <TextView
        android:id="@+id/textThree"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Снимите защитный колпак если он есть. Послабьте колесные болты или гайки, поворотом ключа против часовой стрелки с большим усилием. Необходимо послабить каждый болт или гайку лишь на четверть оборота."
        android:textSize="20sp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toEndOf="@id/numberThree"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/numberThree" />

</androidx.constraintlayout.widget.ConstraintLayout>