<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.firstaid.BleedingAidFragment">

    <TextView
        android:id="@+id/numberOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="42sp"
        android:textColor="#C11F1F"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textOne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Осуществите прямое давление на рану, чтобы остановить или замедлить кровотечение."
        android:textSize="20sp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toEndOf="@id/numberOne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/numberOne" />

    <TextView
        android:id="@+id/numberTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="42sp"
        android:textColor="#C11F1F"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textOne" />

    <TextView
        android:id="@+id/textTwo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Если кровотечение очень сильное, как можно скорее вызовите бригаду скорой медицинской помощи, или попросите это сделать кого-либо другого."
        android:textSize="20sp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toEndOf="@id/numberTwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/numberTwo" />

    <TextView
        android:id="@+id/call112text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="8dp"
        android:text="Вызовите бригаду скорой медицинской помощи по телефону 103 или 112."
        app:layout_constraintTop_toBottomOf="@id/textTwo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/call112btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Звонок 112"
        android:backgroundTint="#C11F1F"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/call112text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/numberThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="42sp"
        android:textColor="#C11F1F"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/call112btn" />

    <TextView
        android:id="@+id/textThree"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Сохраняйте давление на рану пока не прибудет помощь."
        android:textSize="20sp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toEndOf="@id/numberThree"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/numberThree" />


</androidx.constraintlayout.widget.ConstraintLayout>